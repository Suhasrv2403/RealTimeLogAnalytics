FROM bitnami/spark:3.5.0

USER root

# Install curl, netcat, and Python requests
RUN apt-get update && apt-get install -y curl netcat-openbsd python3 python3-pip && \
    pip3 install requests && \
    rm -rf /var/lib/apt/lists/*

# Create jars directory
RUN mkdir -p /opt/spark/jars

# Download compatible versions
RUN curl -L -o /opt/spark/jars/spark-sql-kafka-0-10_2.12-3.5.0.jar \
    https://repo1.maven.org/maven2/org/apache/spark/spark-sql-kafka-0-10_2.12/3.5.0/spark-sql-kafka-0-10_2.12-3.5.0.jar && \
    curl -L -o /opt/spark/jars/kafka-clients-3.4.1.jar \
    https://repo1.maven.org/maven2/org/apache/kafka/kafka-clients/3.4.1/kafka-clients-3.4.1.jar && \
    curl -L -o /opt/spark/jars/spark-token-provider-kafka-0-10_2.12-3.5.0.jar \
    https://repo1.maven.org/maven2/org/apache/spark/spark-token-provider-kafka-0-10_2.12/3.5.0/spark-token-provider-kafka-0-10_2.12-3.5.0.jar && \
    curl -L -o /opt/spark/jars/hadoop-aws-3.3.4.jar \
    https://repo1.maven.org/maven2/org/apache/hadoop/hadoop-aws/3.3.4/hadoop-aws-3.3.4.jar && \
    curl -L -o /opt/spark/jars/aws-java-sdk-bundle-1.12.262.jar \
    https://repo1.maven.org/maven2/com/amazonaws/aws-java-sdk-bundle/1.12.262/aws-java-sdk-bundle-1.12.262.jar

# Copy application files
COPY logConsumer.py /app/logConsumer.py
COPY run.sh /app/run.sh
RUN chmod +x /app/run.sh

USER 1001

# Set working directory
WORKDIR /app

# Run the application
CMD ["/bin/bash", "run.sh"]